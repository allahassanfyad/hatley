<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:layout_margin="17dp"
    android:weightSum="1">

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_weight=".3"
        android:layout_height="match_parent"
        app:cardCornerRadius="18dp"
        app:cardElevation="18dp"
        android:elevation="18dp"
        app:cardMaxElevation="18dp"
        android:layout_margin="10dp"
        app:cardPreventCornerOverlap="true">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/userimg"
            android:scaleType="fitXY"
            android:src="@drawable/download1"
            />

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="0.7"
        android:paddingTop="12dp">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ali Ibrahim"
            android:textColor="@color/colorPrimaryDark"
            android:layout_marginLeft="10dp"
            android:textStyle="bold"/>

        <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Widget.AppCompat.RatingBar.Small"
            android:isIndicator="true"
            android:focusable="false"
            android:scaleX="1.4"
            android:scaleY="1.4"
            android:clickable="false"
            android:layout_gravity="center|left"
            android:stepSize="1.5"
            android:layout_marginLeft="20dp"
            android:progressTint="@color/fcolor"
            android:progressBackgroundTint="#000"
            android:secondaryProgressTint="#ffff"
            android:numStars="5"
            android:rating="2"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginTop="10dp"
            android:weightSum="2"
            android:orientation="horizontal"
            >


            <TextView
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/btnbg"
                android:drawableLeft="@drawable/ic_coupon"
                android:drawablePadding="10dp"
                android:gravity="center|left"
                android:paddingLeft="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:text="Offer Price"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:textSize="10dp"/>


            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@drawable/editbg"
                android:gravity="center_horizontal|center"
                android:hint="20 EGP"
                android:textSize="10dp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginTop="10dp"
            android:weightSum="2"
            android:orientation="horizontal"
            >


            <TextView
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/btnbg"
                android:drawableLeft="@drawable/ic_24_hours"
                android:drawablePadding="10dp"
                android:gravity="center|left"
                android:paddingLeft="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:text="Offer Timer"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:textSize="10dp"/>


            <EditText
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="12 Am"
                android:textSize="10dp"
                android:background="@drawable/editbg"
                android:gravity="center_horizontal|center"
                android:layout_marginRight="5dp"/>

        </LinearLayout>




    </LinearLayout>


</LinearLayout>
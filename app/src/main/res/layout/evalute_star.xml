<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minWidth="280dp"
    android:minHeight="300dp"
    android:gravity="center_horizontal">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Evaluate Star"
        android:gravity="center"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold"
        android:layout_marginTop="20dp"/>

    <androidx.cardview.widget.CardView
        android:layout_width="140dp"
        android:layout_height="120dp"
        app:cardCornerRadius="18dp"
        app:cardElevation="18dp"
        android:elevation="18dp"
        app:cardMaxElevation="18dp"
        android:layout_margin="10dp"
        app:cardPreventCornerOverlap="true">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/userimg"
            android:scaleType="fitXY"
            android:src="@drawable/download1"
            />
    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ali Ibrahim"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="@color/colorPrimaryDark"/>

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Widget.AppCompat.RatingBar.Small"
        android:isIndicator="true"
        android:focusable="false"
        android:scaleX="1.4"
        android:scaleY="1.4"
        android:clickable="false"
        android:layout_marginRight="20dp"
        android:stepSize="1.5"
        android:layout_marginLeft="20dp"
        android:progressTint="@color/fcolor"
        android:progressBackgroundTint="#000"
        android:secondaryProgressTint="#ffff"
        android:numStars="5"
        android:rating="2"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_marginTop="10dp"
        android:weightSum="2"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="70dp"
        android:orientation="horizontal"
        >


        <TextView
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/btnbg"
            android:drawablePadding="10dp"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:text="Make A Complaint "
            android:textColor="@android:color/white"
            android:textSize="10dp"/>


        <TextView
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Note1"
            android:textColor="@color/fcolor"
            android:textSize="10dp"
            android:background="@drawable/editbg2"
            android:textColorHint="@color/colorDarkerGray"
            android:gravity="center_horizontal|center"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="5dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_marginTop="10dp"
        android:weightSum="2"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="70dp"
        android:orientation="horizontal"
        >


        <TextView
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/btnbg"
            android:drawablePadding="10dp"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:text="Note 2"
            android:textColor="@android:color/white"
            android:textSize="10dp"/>


        <TextView
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Note 3"
            android:textSize="10dp"
            android:textColor="@color/fcolor"
            android:background="@drawable/editbg2"
            android:gravity="center_horizontal|center"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="5dp"/>

    </LinearLayout>




</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minWidth="280dp"
    android:minHeight="300dp"
    android:gravity="center_horizontal">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Star Info"
        android:gravity="center"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold"
        android:layout_marginTop="20dp"/>

    <androidx.cardview.widget.CardView
        android:layout_width="140dp"
        android:layout_height="120dp"
        app:cardCornerRadius="18dp"
        app:cardElevation="18dp"
        android:elevation="18dp"
        app:cardMaxElevation="18dp"
        android:layout_margin="10dp"
        app:cardPreventCornerOverlap="true">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/userimg"
        android:scaleType="fitXY"
        android:src="@drawable/download1"
        />
    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ali Ibrahim"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="@color/colorPrimaryDark"/>

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Widget.AppCompat.RatingBar.Small"
        android:isIndicator="true"
        android:focusable="false"
        android:scaleX="1.4"
        android:scaleY="1.4"
        android:clickable="false"
        android:layout_marginRight="20dp"
        android:stepSize="1.5"
        android:layout_marginLeft="20dp"
        android:progressTint="@color/fcolor"
        android:progressBackgroundTint="#000"
        android:secondaryProgressTint="#ffff"
        android:numStars="5"
        android:rating="2"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="24 order before"
        android:layout_marginTop="3dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_marginTop="10dp"
        android:weightSum="2"
        android:layout_marginLeft="90dp"
        android:layout_marginRight="90dp"
        android:orientation="horizontal"
        >


        <TextView
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/btnbg"
            android:drawableLeft="@drawable/ic_coupon"
            android:drawablePadding="10dp"
            android:gravity="center|left"
            android:paddingLeft="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:text="Offer Price"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="10dp"/>


        <EditText
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="20 EGP"
            android:textSize="10dp"
            android:background="@drawable/editbg2"
            android:textColorHint="@color/colorDarkerGray"
            android:gravity="center_horizontal|center"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="5dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_marginTop="10dp"
        android:weightSum="2"
        android:layout_marginLeft="90dp"
        android:layout_marginRight="90dp"
        android:orientation="horizontal"
        >


        <TextView
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/btnbg"
            android:drawableLeft="@drawable/ic_24_hours"
            android:drawablePadding="10dp"
            android:gravity="center|left"
            android:paddingLeft="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:text="Offer Time"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="10dp"/>


        <EditText
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="12 Am"
            android:textSize="10dp"
            android:textColorHint="@color/colorDarkerGray"
            android:background="@drawable/editbg2"
            android:gravity="center_horizontal|center"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="5dp"/>

    </LinearLayout>

    <Button
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:background="@drawable/btnbg"
        android:layout_marginTop="15dp"
        android:text="Approved And Open Chat"
        android:textColor="@color/wcolor"/>

    <LinearLayout
        android:layout_width="260dp"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_marginTop="10dp">

        <Button
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/reduis0"
            android:backgroundTint="@color/colorRead"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="4dp"
            android:text="Reject"
            android:textColor="@color/wcolor"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/reduis0"
            android:backgroundTint="@color/colorLightGreen"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="4dp"
            android:text="Dismiss"
            android:textColor="@color/wcolor"/>








    </LinearLayout>









</LinearLayout>
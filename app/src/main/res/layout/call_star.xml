<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minWidth="280dp"
    android:minHeight="300dp"
    android:layout_margin="10dp"
    android:weightSum="100">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="75"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/reduis0"
        android:layout_marginTop="10dp">
        <fragment

            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:map="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".MapsActivity" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="25"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="vertical">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="40dp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Set Bill Amount"
                android:layout_marginLeft="35dp"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold"
                android:textSize="15dp"/>

            <EditText
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:background="@drawable/editbg3"
                android:layout_marginLeft="40dp"
                android:hint="Price"
                android:gravity="center"
                android:textColor="@color/colorDarkerGray2"
                android:textColorHint="@color/colorDarkerGray2"/>

            <Button
                android:layout_width="70dp"
                android:layout_height="40dp"
                android:text="Send"
                android:textAllCaps="false"
                android:background="@color/colorPrimaryDark"
                android:textColor="@color/wcolor"
                android:textStyle="bold"
                android:textSize="17dp"/>

        </LinearLayout>


        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/redus"
            android:text="Call The Star"
            android:textAllCaps="false"
            android:textColor="@color/wcolor"
            android:textSize="17dp"
            android:layout_marginRight="40dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/colorPrimaryDark"/>



    </LinearLayout>




</LinearLayout>